<h1>your stuff</h1>
<%= link_to 'write a new blog', new_blog_path %>
<div class="stats_display">
  <table>
  <tr>
    <th>title</th>
    <th>wordcount</th>
    <th colspan="3">actions</th>
  </tr>
 
  <% @blogs.each do |blog| %>
    <tr>
      <td><%= blog.title %></td>
      <td><%= blog.wordcount %></td>
      <td><%= link_to 'show', blog_path(blog) %></td>
      <td><%= link_to 'edit', edit_blog_path(blog) %></td>
      <td><%= link_to 'DESTROY', blog_path(blog) %></td>
    </tr>
  <% end %>
</table>
</div>
